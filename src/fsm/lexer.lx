# $Id$

/[\r\n\t ]+/;
"#" .. "\n";

'"' .. '"' -> $label {
	'\\' -> $esc;
	'\"' -> $esc;
	'\f' -> $esc;
	'\n' -> $esc;
	'\r' -> $esc;
	'\t' -> $esc;
	'\v' -> $esc;
	/[^\\]/ -> $char;
}

"'" .. "'" -> $label {
	/./ -> $char;
}

'start:' -> $start;
'end:'   -> $end;

/[a-z0-9_]+/i -> $ident;

'->' -> $to;
'?'  -> $any;
';'  -> $sep;
','  -> $comma;

